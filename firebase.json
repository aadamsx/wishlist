{
  "firestore": {
    "rules": "firestore.rules"
  },

  "hosting": {
    "cleanUrls": true,

    "headers": [
      {
        "source" : "**/sw.js",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ],

    "predeploy": [
      "yarn workspace app test",
      "yarn workspace app build:prod"
    ],

    "public": "./app/dist",

    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],

    "trailingSlash": false
  }
}
